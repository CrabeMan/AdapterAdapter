<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/friends_adt_btn_call">

        <TextView
            android:id="@+id/friends_adt_text_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:textColor="#000"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"/>

        <TextView
            android:id="@+id/friends_adt_text_first_last_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:textColor="#000"
            android:layout_alignBaseline="@+id/friends_adt_text_username"
            android:layout_toEndOf="@+id/friends_adt_text_username"
            android:layout_marginStart="10dp"/>

        <TextView
            android:id="@+id/friends_adt_text_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/friends_adt_text_username"
            android:layout_marginStart="15dp"
            android:textColor="#000"/>
    </RelativeLayout>


    <ImageView
        android:id="@+id/friends_adt_btn_call"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:src="@android:drawable/ic_menu_call"
        android:tint="@color/primary"
        android:layout_marginEnd="20dp"
        android:contentDescription="Info"/>


</RelativeLayout>